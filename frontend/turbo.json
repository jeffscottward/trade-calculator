{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"db:push": {
			"cache": false,
			"persistent": true
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"db:migrate": {
			"cache": false,
			"persistent": true
		},
		"db:generate": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"cache": false
		},
		"test:run": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"]
		},
		"test:watch": {
			"cache": false,
			"persistent": true
		},
		"test:coverage": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"]
		},
		"test:ui": {
			"cache": false,
			"persistent": true
		},
		"test:states": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"]
		},
		"test:states:watch": {
			"cache": false,
			"persistent": true
		},
		"test:states:all": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"]
		}
	}
}
