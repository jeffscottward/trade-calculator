{
	"name": "t-stack-base",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F server db:push",
		"db:studio": "turbo -F server db:studio",
		"db:generate": "turbo -F server db:generate",
		"db:migrate": "turbo -F server db:migrate",
		"test": "turbo test:run",
		"test:watch": "turbo test:watch",
		"test:coverage": "turbo test:coverage",
		"test:ui": "turbo test:ui",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:all": "turbo test:run && playwright test",
		"test:states": "turbo -F web test:states",
		"test:states:watch": "turbo -F web test:states:watch",
		"test:states:all": "turbo -F web test:states:all",
		"browser-tools": "npx @agentdeskai/browser-tools-server@1.2.1",
		"check-types:strict": "turbo check-types"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.0",
		"@mswjs/data": "^0.16.2",
		"@playwright/test": "^1.54.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.0",
		"msw": "^2.10.3",
		"turbo": "^2.5.4",
		"vitest": "^3.2.4"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "pnpm@10.12.4"
}
