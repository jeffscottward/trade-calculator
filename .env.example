# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===========================================
# Database Configuration (Neon PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://username:password@host.neon.tech/database_name?sslmode=require

# ===========================================
# Interactive Brokers Configuration
# ===========================================

# Browser Login Credentials (for Client Portal Gateway web interface)
# These are used when you manually log in at https://localhost:5001
IB_BROWSER_USERNAME=your_ib_browser_username
IB_BROWSER_PASSWORD=your_ib_browser_password

# Paper Trading API Credentials
# These are used by the API after browser authentication
IB_PAPER_USERNAME=paper_trading_username
IB_PAPER_ACCOUNT=DU123456  # Paper account number (starts with DU for paper)

# Live Trading API Credentials (if applicable)
IB_LIVE_USERNAME=live_trading_username
IB_LIVE_ACCOUNT=U123456  # Live account number

# IB API Settings
IB_CLIENT_PORTAL_PORT=5001
IB_TWS_PORT=7497  # 7496 for live, 7497 for paper

# ===========================================
# API Keys for Market Data
# ===========================================

# Yahoo Finance (no key needed, but rate limits apply)
# Note: yfinance library handles authentication automatically

# NASDAQ API (no key needed for earnings calendar)
# Free tier available for basic earnings data

# ===========================================
# Notification Configuration (Optional)
# ===========================================

# Email Notifications
EMAIL_ENABLED=false
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient@gmail.com
EMAIL_PASSWORD=your_app_password  # Use app-specific password for Gmail
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587

# Discord Webhook (Optional)
DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# ===========================================
# Trading Configuration
# ===========================================

# Risk Management
MAX_POSITION_SIZE=0.06  # 6% of portfolio per trade
MAX_CONCURRENT_POSITIONS=3
MAX_DAILY_LOSS=0.10  # 10% daily loss limit
MAX_PORTFOLIO_EXPOSURE=0.20  # 20% max total exposure

# Trade Timing (in minutes relative to market events)
MINUTES_BEFORE_CLOSE=15  # Enter positions 15 min before close
MINUTES_AFTER_OPEN=15    # Exit positions 15 min after open

# ===========================================
# Development Settings
# ===========================================

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=3000
DEBUG_MODE=false

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=backend/logs/trading.log

# ===========================================
# Timezone Configuration
# ===========================================
TIMEZONE=America/New_York  # All times in Eastern Time

# ===========================================
# Feature Flags (Optional)
# ===========================================
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_NOTIFICATIONS=true
ENABLE_AUTO_TRADING=false  # Set to true to enable automated execution

# ===========================================
# Notes
# ===========================================
# 1. Never commit the actual .env file to version control
# 2. Keep .env in .gitignore
# 3. For production, use environment variables from your hosting provider
# 4. IB Client Portal requires manual browser login after startup
# 5. Paper trading account numbers start with 'DU'
# 6. Live trading account numbers start with 'U'